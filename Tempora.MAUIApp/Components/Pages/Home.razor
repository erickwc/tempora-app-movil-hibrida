        </div> *@
        <div>
            <h1 class="t16">Erick Caceres</h1>
            <p class="parr">@fechaHoraActual</p>
        </div>
        <div>
            <button class="btn-goback"> <img src="/Images/setting.svg" alt="Alternate Text" /> </button>
        </div>
    </section>
    <section>
            <div class="inp-cont">
